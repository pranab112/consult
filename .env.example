# Railway Environment Variables
# Copy this file to .env and fill in your values

# Railway API Token (Required for CLI deployment)
# Get from: https://railway.app/account/tokens
RAILWAY_TOKEN=

# Project Configuration
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_NAME=
RAILWAY_ENVIRONMENT=production

# Database (if using Railway PostgreSQL)
DATABASE_URL=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_HOST=
POSTGRES_PORT=5432

# Redis (if using Railway Redis)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Settings
NODE_ENV=production
PORT=3000
APP_URL=

# Authentication
JWT_SECRET=
SESSION_SECRET=

# External Services
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
DEBUG_MODE=false